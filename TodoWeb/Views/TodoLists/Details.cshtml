@model TodoWeb.Dtos.TodoListViewDto

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<partial name="_IndexNav" />
<partial name="_TodoInput" model="@new CreateTodoArgs() { ListId = Model.Id }" />
<hr /> 
<section class="flex flex-col space-y-4" aria-label="Todo/task list" id="todos-@Model.Id">
    @if (Model.Todos.Count() != 0) {
        @await Component.InvokeAsync("List", new { list=Model })
    } else {
        <div class="todo-container flex justify-center">
            <p class="text-lg font-semibold">No tasks added yet</p>
        </div>
    }
</section>
<hr /> 
<section>
    <form class="flex flex-col items-center page-control" 
    asp-action="GetTodos" asp-route-id="@Model.Id" data-id="@Model.Id">
        <div class="form-group">
            <label for="page-size">Items per page:</label>
            <select class="page-size" name="pageSize">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
            </select>
        </div>
        <ul class="flex space-x-4">
            <li>
                <button class="page-prev">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                </button>
            </li>
            <li>
                <input type="number" 
                name="pageNumber"
                class="page-number w-10 text-center"
                value="1"/>
            </li>
            <li>
                <button class="page-next">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                </button>
            </li>
        </ul>
    </form>
</section>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/app/todoListAjaxInit.js"></script>
    <script>
        $(document).ready(function () {
            todoListAjaxInit();
        });
    </script>
}
