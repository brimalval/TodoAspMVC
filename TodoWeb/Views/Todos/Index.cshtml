@model IEnumerable<TodoWeb.Dtos.TodoViewDto>

@{
    ViewData["Title"] = "Home";
}

<h1>Todos</h1>

<section class="m-4 flex justify-center" aria-label="Add task button section">
    <a class="btn-primary" asp-action="Create" asp-controller="Todos">
        @* Plus icon svg *@
        <div class="icon-container mr-3">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
        </div>
        Add a Task
    </a>
</section>

<section class="flex flex-col space-y-4" aria-label="Todo/task list">
    @if (Model.Count() != 0) {
        @foreach (var item in Model) {
        <article class="todo-container">

            <div class="icon-container bg-red-700"></div>

            <div class="flex-grow flex flex-col overflow-auto">
                <summary id="title-@item.Id" class="font-semibold">
                    <a asp-action="Details" asp-controller="Todos" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>
                </summary>
                <details class="cursor-pointer">
                    @Html.DisplayFor(modelItem => item.Description)
                </details>
            </div>

            <a class="edit-todo-btn" asp-action="Edit" asp-route-id="@item.Id" aria-label="Edit todo button">
                <div class="icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                    </svg>
                </div>
            </a>

            <a class="delete-todo-btn" asp-action="Delete" asp-route-id="@item.Id" aria-label="Delete todo button">
                <div class="icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                </div>
            </a>
        </article>
        }
    } else {
        <div class="todo-container flex justify-center">
            <p class="text-lg font-semibold">No tasks added yet</p>
        </div>
    }
</section>

@section Scripts 
{
    <script src="~/js/app/todoCheckerDebounce.js"></script>
    <script>
        $(document).ready(function () {
            var token = $('@Html.AntiForgeryToken()').val();
            var url = '@Url.Action("ToggleStatus")';
            var debounceTime = @Config.DebounceTime;
            todoCheckerDebounce({
                token: token,
                url: url,
                debounceTime: debounceTime
            });
        });
    </script>
}
